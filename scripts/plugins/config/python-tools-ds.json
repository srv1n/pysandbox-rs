{
  "id": "python-tools-ds",
  "version": "0.2.1",
  "name": "Python Tools (Data Science)",
  "description": "Python sandbox worker (sidecar) with a bundled data science runtime (numpy/pandas/matplotlib/scipy/sklearn).",
  "mcp_protocol_version": "2025-06-18",
  "platforms": ["macos_universal"],
  "workers": [
    {
      "id": "python",
      "kind": "mcp_stdio",
      "auto_start": false,
      "tools_namespace": "plugin:python-tools-ds",
      "entrypoints": {
        "macos_universal": "bin/macos/universal/rzn-python-worker"
      },
      "args": [],
      "env": {}
    }
  ],
  "payloads": [
    {
      "source": "${RZN_PYTHON_WORKER_BIN_MACOS}",
      "dest": "bin/macos/universal/rzn-python-worker",
      "platforms": ["macos_universal"],
      "mode": "755"
    }
  ],
  "shared_payloads": [
    {
      "source": "python-bundle-ds",
      "dest": "resources/python"
    }
  ],
  "resources": ["resources/python/bin/python3"]
}

