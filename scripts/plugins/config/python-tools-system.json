{
  "id": "python-tools-system",
  "version": "0.2.1",
  "name": "Python Tools (System Python)",
  "description": "Python sandbox worker (sidecar) using system Python only (no bundled runtime).",
  "mcp_protocol_version": "2025-06-18",
  "platforms": ["macos_universal"],
  "workers": [
    {
      "id": "python",
      "kind": "mcp_stdio",
      "auto_start": false,
      "tools_namespace": "plugin:python-tools-system",
      "entrypoints": {
        "macos_universal": "bin/macos/universal/rzn-python-worker"
      },
      "args": [],
      "env": {}
    }
  ],
  "payloads": [
    {
      "source": "${RZN_PYTHON_WORKER_BIN_MACOS}",
      "dest": "bin/macos/universal/rzn-python-worker",
      "platforms": ["macos_universal"],
      "mode": "755"
    }
  ],
  "resources": []
}

